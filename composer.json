{
  "name": "pantheon-quicksilver/cloudflare-cache",
  "description": "Composer-installable script to purge Cloudflare cache when your live environment's cache is cleared",
  "homepage": "https://github.com/pantheon-quicksilver/cloudflare-cache",
  "authors": [],
  "type": "quicksilver-script",
  "require": {
    "composer/installers": "^1 || ^2",
    "pantheon-quicksilver/pantheon-yml-editor": "dev-main"
  },
  "extra": {
    "pantheon-quicksilver": {
      "cloudflare_cache": [
        {
          "wf_type": "clear_cache",
          "stage": "after",
          "weight": 1
        }
      ]
    }
  },
  "license": "MIT"
}
